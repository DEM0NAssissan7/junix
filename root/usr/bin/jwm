// Reference jwmlib implementation. Helps debugging.

this.main = async function (argc, envp) {
    load("libjwm", envp);
    ldlibs(argc, envp);
    init_wm(envp);

    while(1) {
        request_update = detect_wm_changes();
        if (request_update) {
            draw_background();
    
            display_framerate();
    
            // Render cursor
            render_cursor();
            request_update = false;
        }
        await sleep(1000 / framerate);
    }
}