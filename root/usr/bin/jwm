// Reference jwmlib implementation. Helps debugging.

this.main = async function (argc, envp) {
    load("libjwm", envp);
    ldlibs(argc, envp);
    
    init_wm(envp);
    fork(() => {
        exec("/usr/bin/file-manager", argc, envp);
    })

    thread(send_events_thread);
    while(1) {
        request_update = detect_wm_changes();
        if (request_update) {
            draw_background();
            
            draw_windows();
            
            display_framerate();
    
            // Render cursor
            render_cursor();
            request_update = false;
        }
        await sleep(1000 / framerate);
    }
}

async function send_events_thread() {
    while(1) {
        send_events();
        await sleep(1);
    }
}